<?xml version="1.0" encoding="utf-8"?>

<layout>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_extrasmall">

        <LinearLayout
            android:id="@+id/footer_l"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
             android:background="@drawable/dotted_bg"
            android:orientation="horizontal"
            android:weightSum="2">

            <View
                android:layout_width="@dimen/width_zero"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:visibility="invisible" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/add_circle" />

            <View
                android:layout_width="@dimen/width_zero"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/footer_l"
            android:orientation="horizontal">

            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:visibility="invisible" />


            <LinearLayout
                android:id="@+id/plan_next"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_10"

                android:layout_marginBottom="@dimen/margin_extrasmall"
                android:layout_toRightOf="@+id/trails_rv"
                android:background="@drawable/grey_dot_square"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/grey_plus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:fontFamily="@font/semibold"
                    android:paddingTop="@dimen/margin_10"
                    android:text="Add pitstop"
                    android:textAllCaps="true"
                    android:textColor="@color/black_regular"
                    android:textSize="@dimen/text_11" />


            </LinearLayout>

            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:visibility="invisible" />


            <LinearLayout
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_extrasmall"
                android:layout_toRightOf="@+id/trails_rv"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/tv_date"
                    android:drawableTop="@drawable/flag_"
                    android:drawablePadding="@dimen/margin_extrasmall"
                    android:fontFamily="@font/semibold"
                    android:paddingTop="@dimen/margin_10"
                    android:text="06 Jan 2020"
                    android:textAllCaps="true"
                    android:textColor="@color/black_regular"
                    android:textSize="@dimen/text_11" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="50dp"
                android:background="@color/white_regular"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">


                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/flag_"
                    android:visibility="gone" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/flag_"
                    android:drawablePadding="@dimen/margin_extrasmall"
                    android:fontFamily="@font/semibold"
                    android:paddingTop="@dimen/margin_10"
                    android:text="06 Jan 2020"
                    android:textAllCaps="true"
                    android:textColor="@color/black_regular"
                    android:textSize="@dimen/text_11" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</HorizontalScrollView>
</layout>