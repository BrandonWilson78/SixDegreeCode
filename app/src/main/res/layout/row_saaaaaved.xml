<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        android:id="@+id/parent"
        android:layout_width="@dimen/_150sdp"

    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginTop="2dp"
        android:layout_height="@dimen/_120sdp"
         android:background="@color/white"
         android:orientation="vertical"
        android:padding="@dimen/width_zero"
        android:tag="bla bla">


        <ImageView
            android:id="@+id/arrow"
            android:layout_width="18dp"
            android:visibility="gone"
            android:layout_height="18dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_toRightOf="@+id/ll1"
            android:src="@drawable/white_arrow_down"
            android:tag="bla bla"
            android:tint="@color/black_regular" />

        <RelativeLayout
            android:id="@+id/ll1"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_130sdp"

            android:padding="@dimen/width_zero"
            android:tag="bla bla"
 >
            <!--        <RelativeLayout-->
            <!--            android:id="@+id/ll1"-->
            <!--            android:layout_width="240dp"-->
            <!--            android:layout_height="match_parent"-->
            <!--android:background="@color/trailcolor"-->
            <!--            android:padding="@dimen/width_zero"-->
            <!--            android:tag="bla bla"-->

            <!--          >-->

               <ImageView
                     android:id="@+id/image"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                    />





            <LinearLayout
                android:id="@+id/ll"
                android:layout_above="@+id/bottom_lay"
                android:layout_width="235dp"
                android:layout_height="match_parent"











                android:layout_centerVertical="true"
                 android:clickable="true"
                 android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_20"
                android:tag="rv_item">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:tag="bla bla">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:tag="bla bla"
                        android:gravity="center"
                         android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white_regular"
                        android:textSize="@dimen/text_11" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/flag"
                            android:layout_width="25dp"
                            android:layout_height="23dp"
                            android:adjustViewBounds="true"
                           />

                        <TextView
                            android:id="@+id/loc_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/margin8"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/semibold"
 android:gravity="center"

                            android:textAllCaps="true"
                            android:textColor="@color/white_regular"
                            android:textSize="@dimen/text_11" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/placename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"
                        android:gravity="center"
                        android:drawableTint="@color/white"
                        android:fontFamily="@font/regular"
                        android:drawableLeft="@drawable/marker"
                        android:drawablePadding="@dimen/margin8"

                        android:textAllCaps="true"
                        android:textColor="@color/white_regular"
                        android:textSize="@dimen/text_9" />
                </LinearLayout>


            </LinearLayout>



            <RelativeLayout
                android:id="@+id/bottom_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_bg"

                 android:orientation="horizontal"
                android:padding="@dimen/margin_extrasmall"
                android:tag="bla bla">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/rv_star"
                     android:layout_height="wrap_content">
                    <ImageView
                    android:id="@+id/starborder"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="#788679"
                        android:visibility="gone"
                    android:layout_gravity="left"
                    android:src="@drawable/star_border"
                    />
                    <ImageView
                        android:id="@+id/starfill"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="#788679"
                        android:visibility="visible"
                        android:layout_gravity="left"
                        android:src="@drawable/star_fill"
                        />

                </RelativeLayout>







                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/heart_fill_"
                        android:id="@+id/tv_likes"
                        android:drawablePadding="@dimen/margin_extrasmall"
                         android:textColor="@color/black_regular"
                        android:textSize="@dimen/text_15"
                              />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:drawableLeft="@drawable/chat_"
                        android:drawablePadding="@dimen/margin_extrasmall"
                        android:id="@+id/tv_comment"
                         android:textColor="@color/black_regular"
                        android:textSize="@dimen/text_15" />
                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>
